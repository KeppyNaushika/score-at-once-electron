    "@prisma/client": "^5.8.1",
    "@react-pdf/renderer": "^3.1.14",
    "autoprefixer": "^10.4.16",
    "dayjs": "^1.11.10",
    "electron-is-dev": "^2.0.0",
    "electron-next": "^3.1.5",
    "electron-squirrel-startup": "^1.0.0",
    "next": "^14.0.1",
    "pdfjs-dist": "^4.0.379",
    "react": "^18.2.0",
